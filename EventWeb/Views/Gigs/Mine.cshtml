@using System.Diagnostics
@using System.Globalization
@using System.Web.UI.WebControls
@model IEnumerable<EventWeb.Core.Models.Gig>
@{
    ViewBag.Title = "My Event";
}

<ul class="gigs voffset">
    @foreach (var item in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM", CultureInfo.CreateSpecificCulture("en-us"))
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")
                </div>
            </div>

            <div class="details">
                <span class="artist">
                    @item.Artist.Name
                </span>
                <span class="genre">
                    @item.Genre.Name
                </span>
                <div class="actions">
                    @Html.ActionLink("Edit", "Edit", new {Id = item.Id})
                    <a href="#" class="js-cancel-gig" data-gig-id="@item.Id">Cancel</a>
                    @{
                        Debug.WriteLine(@item.Id);
                    }
                </div>
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function()
        {
            $(".js-cancel-gig").click(function (e) {
                bootbox.dialog({
                    message: "Are you sure you want to cancel this event",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No!",
                            className: "btn-success",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes!",
                            className: "btn-danger",
                            callback: function () {
                                var $button = $(e.target);
                                $.ajax({
                                    url: "/api/gigs",
                                    type: "DELETE",
                                    data: { GigId: $button.attr("data-gig-id") },
                                    success: function () {
                                        $button.parents("li")
                                            .fadeOut(function () {
                                                $(this).remove();
                                            });
                                    },
                                    error: function () {
                                        alert("Something failed!");
                                    }
                                });

                            }
                        },
                    }
                });
            });
        });
    </script>
}
