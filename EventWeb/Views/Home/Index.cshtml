@using System.Globalization
@using EventWeb.Models
@model IEnumerable<EventWeb.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var item in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @item.DateTime.ToString("MMM", CultureInfo.CreateSpecificCulture("en-us"))
                </div>
                <div class="day">
                    @item.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @item.Artist.Name
                    <button data-user-info="@item.ArtistId" class="pull-right btn btn-sm btn-link js-toggle-follow">Follow</button>
                </span>
                <span class="genre">
                    @item.Genre.Name
                </span>
                <button data-gig-info="@item.Id"class="pull-right btn btn-default btn-sm js-toggle-attendance">Going ?</button>
            </div>
        </li>
    }
</ul>
@section scripts {
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var $button = $(e.target);
                $.post("/api/attendances",
                    {
                        gigId: $button.attr("data-gig-info")
                    })
                .done(function() {
                        $button.removeClass("btn-default")
                               .addClass("btn-info")
                               .text("Going");
                    })
                .fail(function() {
                        alert("Something failed!");
                    })
            })
        })

        $(document).ready(function() {
            $(".js-toggle-follow").click(function(e) {
                var $button = $(e.target);
                $.post("/api/followings",
                    {
                        followeeId: $button.attr("data-user-info")
                    })
                .done(function() {
                        $button.text("Following");
                    })
                .fail(function() {
                        alert("Something failed!");
                    })
            })
        })
    </script>
}